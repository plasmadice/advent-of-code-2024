{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@scripts/*": ["scripts/*"],
      "@src/*": ["src/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*", "scripts/**/*"]
}